<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/overview_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/overview_title_view_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/overview_title_view_pager_height"
            android:background="@color/overview_title_view_pager_background"
            />

    </android.support.v4.view.ViewPager>

    <br.com.rr.deslemtech.archi.view.component.NoClickRelativeLayout
        android:id="@+id/overview_no_city_selected_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/overview_no_city_selected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/you_must_select_a_city_in_configs"
            android:textSize="@dimen/overview_item_default_textsize"
            android:textColor="@color/black"
            />

    </br.com.rr.deslemtech.archi.view.component.NoClickRelativeLayout>

</RelativeLayout>